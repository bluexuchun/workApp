<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user"
        android:orientation="vertical"
        android:background="@color/colorWhite"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/waveradius"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
        >
            <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/userava"
                    android:src="@mipmap/ic_loading"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
            />
            <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:padding="2dp"
                    android:id="@+id/vip"
                    android:src="@mipmap/wan_vip"
                    android:scaleType="fitCenter"
                    android:background="@color/colorWhite"
                    app:riv_corner_radius="30dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
                    android:layout_below="@+id/userava"
                    android:layout_toRightOf="@+id/userava"
                    android:layout_marginLeft="-18dp" android:layout_marginTop="-15dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/userava"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
            >
                <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp"
                        android:text="姓名：张丹丹"
                />
                <TextView
                        android:id="@+id/identify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:text="身份：学生"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                >
                    <TextView
                            android:id="@+id/childId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前小孩：张雨绮"
                            android:textSize="12dp"
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="8dp"
                    />
                    <TextView
                            android:id="@+id/changeChild"
                            android:layout_width="29dp"
                            android:layout_height="16dp"
                            android:background="@drawable/radius_small"
                            android:gravity="center"
                            android:text="切换"
                            android:textSize="12dp"
                            android:textColor="@color/colorMain"
                    />
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/borderbox"
                    android:text="充值"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="10dp"
            />

        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@mipmap/vip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/colorWhite"
                        android:text="VIP"
                        android:layout_marginTop="2dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@mipmap/coupon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/colorWhite"
                        android:text="优惠券"
                        android:layout_marginTop="2dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@mipmap/order"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/colorWhite"
                        android:text="订单"
                        android:layout_marginTop="2dp"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
    >
        <LinearLayout
                android:id="@+id/mycollect"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/mycollect"
                            android:adjustViewBounds="true"

                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/mycredit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/mycredit"
                            android:adjustViewBounds="true"
                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分商城"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/mygoverment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/mygoverment"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="政策解读"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/myfriend"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/myfriend"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的好友圈"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/mydiary"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/mydiary"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的日记"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/mysettings"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            >
                <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@mipmap/mysettings"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                    />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/right"
                        android:adjustViewBounds="true"
                        android:layout_gravity=""
                />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>