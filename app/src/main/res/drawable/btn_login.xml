<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <solid android:color="#fff5ffff" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffffd94f" android:endColor="#ffffad42" android:angle="90" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="#fff5ffff" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffffd9" android:endColor="#ffffaf51" android:angle="90" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />
        </shape>
    </item>
</selector>